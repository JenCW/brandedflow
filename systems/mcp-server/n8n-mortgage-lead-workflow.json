        "options": {}
      },
      "name": "Success Log",
      "type": "n8n-nodes-base.noOp",
      "typeVersion": 1,
      "position": [910, 190]
    },
    {
      "parameters": {
        "message": "=❌ Failed to process mortgage lead\n\nError: {{$json.error || 'Unknown error'}}",
        "options": {}
      },
