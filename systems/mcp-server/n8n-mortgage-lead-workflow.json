            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": []
        },
        "jsonBody": "={\"automation\":\"process-mortgage-lead\",\"params\":{\"lead_name\":\"{{$json.fields.Name}}\",\"lead_phone\":\"{{$json.fields.Phone}}\",\"lead_email\":\"{{$json.fields.Email}}\",\"lead_city\":\"{{$json.fields.City}}\",\"lead_situation\":\"{{$json.fields.Situation}}\"},\"dryRun\":false}",
